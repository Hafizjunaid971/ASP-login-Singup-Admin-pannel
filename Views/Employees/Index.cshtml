@model IEnumerable<techsolution.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create",null, new{ @class = "btn btn-success", @style = "color:white" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Designation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salary)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Designation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salary)
        </td>
        <td>
            @if (User.IsInRole("admin"))
                {
                @Html.ActionLink("Edit", "Edit", new { id = item.id },new { @class = "btn btn-primary", @style = "color:white" }) 
                @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-danger", onclick = "return confirm('Are sure wants to delete?');" }) 
            }
          
            @Html.ActionLink("Details", "Details", new { id=item.id }, new { @class = "btn btn-warning", @style = "color:white" }) 
           
        </td>
    </tr>
}

</table>
